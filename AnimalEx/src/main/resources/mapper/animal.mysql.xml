<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.examplecoop.animalex.animal.mybatis.AnimalMybatisMapper">
    <insert id="insertAnimal" parameterType="com.examplecoop.animalex.animal.dto.AnimalDTO" useGeneratedKeys="true" keyProperty="id">
        insert into animal_tbl(name, age, kind) values(#{name}, #{age}, #{kind})
    </insert>
    <select id="allSelAnimal" resultType="com.examplecoop.animalex.animal.dto.AnimalDTO">
        select id, name, age, kind from animal_tbl order by id
    </select>
    <select id="selectAnimal" resultType="com.examplecoop.animalex.animal.dto.AnimalDTO">
        select id, name, age, kind from animal_tbl where id = #{id}
    </select>
    <delete id="delAnimal" parameterType="com.examplecoop.animalex.animal.dto.AnimalDTO">
        delete from animal_tbl where id = #{id}
    </delete>

</mapper>